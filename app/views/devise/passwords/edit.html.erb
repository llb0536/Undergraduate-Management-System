<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
<h2>重置密码</h2>
	<p><%= resource.errors.full_messages.join('，且') %></p>
	<div class="">
  <%= f.hidden_field :reset_password_token %>

  <p><%= f.label :password, :class=>"label" %>
  <%= f.password_field :password,:class=>'text' %></p>

  <p><%= f.label :password_confirmation,:class=>'text' %>
  <%= f.password_field :password_confirmation,:class=>'text' %></p>
	</div>
	<div class="clear"></div>
	<div class="clear"></div>
	<p><br>
	    <button class="create" type="submit">重置密码</button>
	</p>
	<% end %>

<% end %>
