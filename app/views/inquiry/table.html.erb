	<font class="mediumtxt"><br>
<%= form_tag '/inquiry/tableStep1' do %>
	<table width="90%" cellspacing="0" cellpadding="0" border="0" align="center"><tbody>
		
		<tr><td bgcolor="#dde3ec"><table width="100%" cellspacing="1" cellpadding="4" border="0" class="smalltxt"><tbody><tr class="header"><td colspan="99">年级列表</td></tr>
	<tr align="center" class="category">
		<td width="120"><input type="checkbox" onclick="checkall(this.form)" class="category" name="chkall">选？</td>
		<td>名称</td>
		<td width="50">含班级数</td>
		<td width="50">含学生数</td>
	</tr>
		<% @grades.each do |grade| %>
		  <tr align="center" class="pointable">
				<td bgcolor="#f8f9fc"><input type="checkbox" value="1" name="checked_grades[<%= grade.id %>]"></td>
				<td bgcolor="#ffffff" onMouseOver="this.style.backgroundColor='#F8F9FC'"  onMouseOut="this.style.backgroundColor='#FFFFFF'"><%= grade.name %>级</td>
				<td bgcolor="#ffffff"><%= grade.klasses.count %></td>
				<td bgcolor="#ffffff"><%= sum=0;grade.klasses.each {|k| sum+=k.students.count};sum %></td>

		  </tr>
		<% end %>
		</tbody></table></td></tr>
	</tbody></table></font>
	<table width="99%" cellspacing="0" cellpadding="0" align="center">
	<tbody><tr>
	</tr></tbody></table>
	<br>
	<center><%= submit_tag '下一步',:onclick=>'if(!checknotnil_inner(this.form)){alert(\'请至少选择一个。\');return false;}else{return true}'%></center>
</table>
